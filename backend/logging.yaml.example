version: 1
disable_existing_loggers: True
loggers:
  # To view all logs on screen (stdout), set all `propagate` in this section to `True`.
  "":
    handlers: [rootConsoleHandler, errorFileHandler]
    level: DEBUG
    propagate: False

  _log_:
    handlers: [errorFileHandler]
    level: ERROR
    propagate: False

  _log_.event:
    handlers: [eventFileHandler]
    level: INFO
    propagate: True

  _log_.timing:
    handlers: [timingFileHandler]
    level: INFO
    propagate: True

  fastapi:
    handlers: [eventFileHandler, errorFileHandler]
    propagate: False

  uvicorn:
    handlers: [errorFileHandler]
    level: ERROR
    propagate: False

  uvicorn.access:
    handlers: [accessFileHandler]
    level: INFO
    propagate: True

  uvicorn.error:
    handlers: [eventFileHandler]
    level: INFO
    propagate: True

handlers:
  # In unix/linux systems where log file rotation (logrotate) is on,
  # replace ALL `logging.FileHandler` in this section with `logging.handlers.WatchedFileHandler`.
  rootConsoleHandler:
    level: DEBUG
    formatter: simpleFormatter
    class: logging.StreamHandler
    stream: ext://sys.stdout

  errorFileHandler:
    level: ERROR
    formatter: simpleFormatter
    class: logging.FileHandler
    filename: log/error.log
    mode: a
    encoding: utf-8

  eventFileHandler:
    level: INFO
    formatter: eventFormatter
    class: logging.FileHandler
    filename: log/event.log
    mode: a
    encoding: utf-8

  timingFileHandler:
    level: INFO
    formatter: timingFormatter
    class: logging.FileHandler
    filename: log/timing.log
    mode: a
    encoding: utf-8

  accessFileHandler:
    level: INFO
    formatter: accessFormatter
    class: logging.FileHandler
    filename: log/access.log
    mode: a
    encoding: utf-8

formatters:
  simpleFormatter:
    format: "%(asctime)s\t%(name)s\t%(levelname)s\t%(message)s"

  eventFormatter:
    format: "%(asctime)s\t%(levelname)s\t%(message)s"

  timingFormatter:
    format: "%(asctime)s\t%(message)s"

  accessFormatter:
    format: "%(asctime)s\t%(name)s\t%(levelname)s\t%(message)s"